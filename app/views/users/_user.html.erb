
<% if local_assigns[:link] %>
    <a href=<%= user_path(user) %>>
<% end %>
    <div class="card">
        <div class="row">
            <div class="col-md-1">
                <%= image_tag user.photo, class: "img-fluid rounded-start" %>
            </div>
            <div class="col-md">
                <div class="card-body justify-content-between">
                    <h5 class="card-title"><%= user.name %></h5>
                    <p class="card-text text-end">Number of Posts: <%= user.posts.count %></p>
                </div>
            </div>
        </div>
    </div>
</a>
