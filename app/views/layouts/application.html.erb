<!DOCTYPE html>
<html>
  <head>
    <title>BlogsDir</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success" role="alert">
          <p class="notice"><%= notice %></p>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-warning" role="alert">
          <p class="alert"><%= alert %></p>
        </div>
      <% end %>

      <% if current_user %>
        <%= link_to 'Home', root_path, class:"btn btn-primary mt-2" %>
        <%= link_to 'New Post', new_user_post_path(user_id: current_user.id), class: 'btn btn-primary mt-2' %>
        <%= link_to 'My Profile', user_path(current_user), class: 'btn btn-primary mt-2' %>
        <%= link_to 'Log Out', destroy_session_path(current_user), method: :delete, class: 'btn btn-primary mt-2' %>

      <%end%>

      <%= yield %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
